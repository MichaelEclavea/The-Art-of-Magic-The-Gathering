		<main>
			<h1>The Art of Magic the Gathering</h1>

			<form action=""></form>
			<div id="form">
				<h4>Search by Card Name or Artist</h4>
				<form action="/search" method="post">
					<div id="search">
						<input
							id="search"
							type="text"
							name="search"
							placeholder="Enter a name or artist"
							required
						/>
					</div>
					<fieldset>
						<div id="title">
							<label for="name">
								<span>Card Name</span>
								<input
									class="radio"
									type="radio"
									name="search"
									value="name"
									required
								/>
							</label>
						</div>
					</fieldset>
					<fieldset>
						<div id="artist">
							<label for="artist">
								<span>Artist</span>

								<input
									id="input1"
									type="radio"
									name="search"
									value="artist"
									required
								/>
							</label>
						</div>
					</fieldset>
					<button type="submit">Search the MTG API</button>
				</form>
			</div>
