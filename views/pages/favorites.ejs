<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head.ejs') %>
		<title>Card Favorites</title>
		<link href="base.css" rel="stylesheet" />
	</head>
	<body>
		<header>
			<div class="fixed-top">
				<div class="collapse" id="navbarToggleExternalContent">
					<div class="bg-dark p-4">
						<h5 class="text-white h4">Magic Menu</h5>

						<a href="pages/searches/new.ejs"><span class="text-white"><p>Favorite Cards</p></span></a>
						<a href="pages/searches/new.ejs"><span class="text-white"><p>About Us</p></span></a>
					</div>
				</div>
				<nav class="navbar navbar-dark bg-dark">
					<button
						class="navbar-toggler"
						type="button"
						data-toggle="collapse"
						data-target="#navbarToggleExternalContent"
						aria-controls="navbarToggleExternalContent"
						aria-expanded="false"
						aria-label="Toggle navigation"
					>
						<span class="navbar-toggler-icon"></span>
					</button>
				</nav>
			</div>
		</header>
		<main>
			<h4>Saved Cards</h4>
			<ul>
				<% savedCardArry.forEach(card => { %>
				<section>
					<li><img src="<%= card.image_url %>" alt="" /></li>
					<li><h1><%= card.name %></h1></li>
					<li><h3><%= card.artist %></h3></li>
					<li><a href="<%=card.artist_store_url %>"><%= card.artist_store_url %></a></li>

					<form action="/searchArtist" method="post">
						<input
							hidden
							class="details"
							type="text"
							name="artist"
							value="<%= card.artist %>"
						/>
						<button type="submit">See more from <%= card.artist %></button>
					</form>
					<form action="/delete/<%= card.id %>?_method=DELETE" method="POST">
						<button type="submit">Delete Book</button>
					</form>

					<form id="updateForm" action="/update/<%= card.id %>?_method=PUT" method="POST">
						<div id="search">
							<input id="search" type="text" name="artist_store_url" placeholder="Enter artist store url" required />
							<button type="submit">Update store</button>
						</div>
					</form>	
				</section>
				<%})%>
			</ul>
		</main>
	</body>
</html>
